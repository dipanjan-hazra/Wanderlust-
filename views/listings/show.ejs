
<%layout("layouts/boilerplate")%>
<body>
    <div class="row">
        <div class="col-8 offset-3" >
                <h2 class="mt-2"><%= listing_data.title %></h2>

        </div>
        
        <div class="col-8 offset-3 mt-2">

            <div class="card show-card listing-card">
            <img src="<%=listing_data.image.url%>" class="card-img-top show-img" alt="listing_image">
            <div class="card-body">
            
            <p class="card-text">owned by<i><%=listing_data.owner.username%></i></p>
            <p class="card-text"><%=listing_data.description %></p>
            <p class="card-text"> &#8377;<%= listing_data.price.toLocaleString    ("en-in") %></p> <!-- // // this toLocaleString give  coma in way indian  -->
            <p class="card-text"> <%= listing_data.location %> ,</p>
            <p class="card-text"><%= listing_data.country %></p>
            <p class="card-text"></p>
        </div>
 <% if(currUser && currUser._id.equals(listing_data.owner._id)) {%> 
        <!-- edit btn -->
        <div class="btns">
            <form method="get" action="/listings/<%=listing_data._id%>/edit" class="col-1 mt-4 offset-3">
            <button class="btn btn-dark edit-btn">Edit</button>
             </form>
             <!-- <a href="/listings/<%=listing_data._id%>/edit">Edit</a> -->

             <form method="post" action="/listings/<%=listing_data._id%>?_method=DELETE" class="col-6 offset-2 mt-4">
              <button class="btn btn-dark del-btn">Delete</button>
         </form>
        </div class="col-8 offset-3">
            <hr>
    <% } %>   
        
      <!-- === LEAVE A REVIEW === -->
<% if (currUser) { %>
  <h4 class="mt-4">Leave a Review</h4>
  <form action="/listings/<%= listing_data.id %>/reviews" method="post" novalidate class="needs-validation">

    <!-- Star Rating Widget -->
    <div class="mb-3 mt-3">
      <label class="form-label d-block">Rating</label>
      <fieldset class="starability-slot" style="max-width: 150px;">
        <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
        <input type="radio" id="rate1" name="review[rating]" value="1" />
        <label for="rate1" title="Terrible">1 star</label>
        <input type="radio" id="rate2" name="review[rating]" value="2" />
        <label for="rate2" title="Not good">2 stars</label>
        <input type="radio" id="rate3" name="review[rating]" value="3" />
        <label for="rate3" title="Average">3 stars</label>
        <input type="radio" id="rate4" name="review[rating]" value="4" />
        <label for="rate4" title="Very good">4 stars</label>
        <input type="radio" id="rate5" name="review[rating]" value="5" />
        <label for="rate5" title="Amazing">5 stars</label>
      </fieldset>
    </div>

    <!-- Comment Input -->
    <div class="mb-3">
      <label for="review-comment" class="form-label">Comment</label>
      <textarea 
        name="review[comment]"
        id="review-comment"
        cols="30"
        rows="3"
        class="form-control"
        required
        placeholder="Write your review here..."></textarea>
      <div class="valid-feedback">Thanks for your comment</div>
      <div class="invalid-feedback">Please add some comments</div>
    </div>
    <button type="submit" class="btn btn-outline-dark mt-2">Submit</button>
  </form>

<% } %>
  <hr>

<!-- === ALL REVIEWS === -->

  <div class="row">
    <% if (listing_data.reviews && listing_data.reviews.length > 0) { %>
  <!-- display reviews -->

    <p class="mt-4 mb-2">All Reviews</p>
        <% for (const review of listing_data.reviews) { %>
         <div class="card col-5 ms-3 mb-3">
            <div class="card-body" style="overflow: hidden;">
              <h5 class="card-title mb-1"><%= review.author.username %></h5>
              <div style="max-width: 150px; overflow: hidden; margin-bottom: 0.5rem;">
                   <div class="starability-result" data-rating="<%= review.rating %>"></div>
              </div>
              <p class="card-text mb-2" style="word-break: break-word;"><%= review.comment %></p>
              <% if (currUser && currUser._id.equals(review.author._id)) { %>
                   <form class="mb-0 mt-1" method="POST" action="/listings/<%= listing_data._id %>/reviews/<%= review._id %>?_method=DELETE">
                    <button class="btn btn-dark btn-sm">Delete</button>
                  </form>
              <% } %>
            </div>
          </div>
        <% } %>

      <% } %>

  </div>

      <!-- map start -->
      
      <div class="col-6 offset-3 mt-2">
         <h3>Where You Will be</h3>
          <script>
            const mapToken = "<%= process.env.MAP_TOKEN %>";
            const listing_data = <%- JSON.stringify(listing_data) %>;
          </script>
            <div id="map"></div>
            <script src="/js/map.js"></script>
      </div>
</div>
</div>
</div>

</body>
